
<%= form_for @recipe do |f| %>
    <%= f.label "Recipe Name:" %>
    <%= f.text_field :title %><br>
    Ingredients: <br>
    <%= f.fields_for :ingredients do |f1| %>
        <%= f1.label :name %>
        <%= f1.text_field :name %><br>

        <%= f1.label :quantity %>
        <%= f1.text_field :quantity %><br>

    <% end %>
    <%= f.submit %>
<% end %>